}

<div class="text-center">
    <br />
    <br />
    <div class="section">
        <h1 >KADROVSKA EVIDENCIJA</h1>
    </div>
    <br />
    <br />
    <div class="row ">
        <div class="col-6 ">
            <div class="card slideLeft">
                <a asp-controller="Employee" asp-action="Index">
