<!DOCTYPE html>
<html lang="en">
<head>
    
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - Kadrovska</title>

        <link rel="stylesheet" href="~/css/BootswatchTheme.css" />
        <link rel="stylesheet" href="~/Kadrovska_baza.styles.css" asp-append-version="true" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">
        <link rel="stylesheet" href="https://netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Kadrovska</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarColor02">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Employee" asp-action="Index"><i class="bi bi-building text-success"></i>Zaposleni</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#"><i class="bi bi-bar-chart-line-fill text-primary"></i>  Izvestaji</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">About</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false"><i class="bi bi-gear "></i>  Management</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-controller="State" asp-action="Index">Država</a>
                                <a class="dropdown-item" asp-controller="City" asp-action="Index">Grad</a>
                                <a class="dropdown-item" asp-controller="Community" asp-action="Index">Opština</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-controller="Organization" asp-action="Index">Organizacija</a>
                                <a class="dropdown-item" asp-controller="Sector" asp-action="Index">Sektor</a>
                                <a class="dropdown-item" asp-controller="Office" asp-action="Index">Služba</a>
                                <a class="dropdown-item" asp-controller="Position" asp-action="Index">Pozicija</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-controller="LevelOfEducation" asp-action="Index">Stepen obrazovanja</a>
                                <a class="dropdown-item" asp-controller="ProfessionalQualification" asp-action="Index">Struka</a>
                                <a class="dropdown-item" asp-controller="Profession" asp-action="Index">Zanimanje</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-controller="Sex" asp-action="Index">Pol</a>
                                <a class="dropdown-item" asp-controller="Employment" asp-action="Index">Radni odnos</a>
                                <a class="dropdown-item" asp-controller="ReasonForTermination" asp-action="Index">Razlog prestanka</a>

                            </div>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>

    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
</body>
<footer class="border-top footer">
    <div >
            2022 - Kadrovska - &copy; Milan Pumpalović
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</html>
